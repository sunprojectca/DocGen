{
  "name": "docgen",
  "version": "0.1.0",
  "description": "AI-Powered Universal Code Documentation Generator",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "docgen": "dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc && chmod +x dist/cli.js",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "prepublishOnly": "npm run build && npm run test && npm run lint"
  },
  "keywords": [
    "documentation",
    "ai",
    "code-analysis",
    "mermaid",
    "cli",
    "developer-tools"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunprojectca/DocGen.git"
  },
  "bugs": {
    "url": "https://github.com/sunprojectca/DocGen/issues"
  },
  "homepage": "https://github.com/sunprojectca/DocGen#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "openai": "^4.73.0",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.1",
    "tree-sitter": "^0.21.1",
    "unified": "^11.0.5",
    "remark": "^15.0.1",
    "remark-stringify": "^11.0.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.7",
    "globby": "^14.0.2",
    "execa": "^9.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "prettier": "^3.4.2",
    "@types/debug": "^4.1.12"
  },
  "optionalDependencies": {
    "tree-sitter-cli": "^0.23.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "packageManager": "npm@10.9.2"
}
